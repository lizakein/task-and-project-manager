{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "noEmit": true,

    "allowJs": true,
    "checkJs": false,

    "moduleResolution": "bundler",

    "baseUrl": "./src",
    "paths": {
      "@constants/*": ["constants/*"]
    }
  },
  "include": ["src"]
}
